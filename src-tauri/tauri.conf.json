{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DevLog Desk",
  "version": "0.2.1",
  "identifier": "com.ahmadsaptan.devlogdesk",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DevLog Desk",
        "width": 1220,
        "height": 860,
        "minWidth": 960,
        "minHeight": 720,
        "resizable": true,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "capabilities": ["default"],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
