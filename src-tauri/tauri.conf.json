{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DevLog Desk",
  "version": "0.1.0",
  "identifier": "com.ahmadsaptan.devlogdesk",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DevLog Desk",
        "width": 1220,
        "height": 860,
        "minWidth": 960,
        "minHeight": 720,
        "resizable": true
      }
    ],
    "security": {
      "capabilities": ["default"],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
